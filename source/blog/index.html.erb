---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
<div class="container">
  <article id='<%= article.data.slug %>'>
    <strong>
      <a href="<%= article.url %>"><%= article.title %></a>
    </strong>
    <%= article.summary(300, '') %>
    <small><%= link_to 'Read on >>', article.url %></small>
  </article>
</div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
