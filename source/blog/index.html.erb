---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
<div class="container">
  <div class="blog-list">
    <% page_articles.each_with_index do |article, i| %>

      <article id='<%= article.data.slug %>'>
        <header style="background-image: url(/blog/<%= article.date.year %>-<%= article.date.strftime('%m') %>-<%= article.slug %>/header.jpg)">
          <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
        </header>
        <%= article.summary(250, '') %>
        <small><%= link_to 'Read on >>', article.url %></small>
      </article>

    <% end %>
  </div>
</div>
<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
